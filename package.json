{
  "name": "ralphh-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.1",
  "description": "Ralph Studio monorepo: CLI, backend orchestrator, and desktop app",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel --filter=@ralphh/ralphd --filter=@ralphh/desktop --ui tui",
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "dev:cli": "turbo run dev --filter=@ralphh/cli",
    "dev:backend": "turbo run dev --filter=@ralphh/ralphd",
    "dev:desktop": "turbo run dev --filter=@ralphh/desktop"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "^1.2.4",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.3",
    "turbo": "^2.8.11"
  }
}
